<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distances"
        android:textAlignment="center"
        android:textSize="16pt"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

    <!-- Ganthipuram Bus Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <!-- Ganthipuram Bus TextView -->
        <TextView
            android:id="@+id/GanthipuramBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganthipuram Bus Stop"
            android:textSize="10pt"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <!-- Ganthipuram Bus Distance TextView -->
        <TextView
            android:id="@+id/GanthipuramBusDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 km"
            android:textSize="10pt"
            android:layout_alignBaseline="@id/GanthipuramBus"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <!-- Ganthipuram Bus Edit Name Button -->
        <Button
            android:id="@+id/GanthipuramBusNameEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/GanthipuramBus"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Name"
            android:textSize="6pt" />

        <!-- Ganthipuram Bus Edit Coordinates Button -->
        <Button
            android:id="@+id/GanthipuramBusCoordinateEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/GanthipuramBus"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Coordinates"
            android:textSize="6pt" />

    </RelativeLayout>

    <!-- Ganapathy Bus Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <!-- Ganthipuram Bus TextView -->
        <TextView
            android:id="@+id/GanapathyBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganapathy Bus Stop"
            android:textSize="10pt"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <!-- Ganthipuram Bus Distance TextView -->
        <TextView
            android:id="@+id/GanapathyBusDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 km"
            android:textSize="10pt"
            android:layout_alignBaseline="@id/GanapathyBus"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <!-- Ganthipuram Bus Edit Name Button -->
        <Button
            android:id="@+id/GanapathyNameEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/GanapathyBus"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Name"
            android:textSize="6pt" />

        <!-- Ganthipuram Bus Edit Coordinates Button -->
        <Button
            android:id="@+id/GanapathyCoordinateEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/GanapathyBus"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Coordinates"
            android:textSize="6pt" />

    </RelativeLayout>

    <!-- Omni Bus Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <!-- Ganthipuram Bus TextView -->
        <TextView
            android:id="@+id/OmniBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Omni Bus Stand"
            android:textSize="10pt"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <!-- Ganthipuram Bus Distance TextView -->
        <TextView
            android:id="@+id/OmniBusDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 km"
            android:textSize="10pt"
            android:layout_alignBaseline="@id/OmniBus"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <!-- Ganthipuram Bus Edit Name Button -->
        <Button
            android:id="@+id/OmniBusNameEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/OmniBus"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Name"
            android:textSize="6pt" />

        <!-- Ganthipuram Bus Edit Coordinates Button -->
        <Button
            android:id="@+id/OmniBusCoordinateEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/OmniBus"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Coordinates"
            android:textSize="6pt" />

    </RelativeLayout>

    <!-- Ganthipuram Junction Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <!-- Ganthipuram Bus TextView -->
        <TextView
            android:id="@+id/GanthipuramJunction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganthipuram Junction Stop"
            android:textSize="10pt"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <!-- Ganthipuram Bus Distance TextView -->
        <TextView
            android:id="@+id/GanthipuramJunctionDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 km"
            android:textSize="10pt"
            android:layout_alignBaseline="@id/GanthipuramJunction"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <!-- Ganthipuram Bus Edit Name Button -->
        <Button
            android:id="@+id/GanthipuramJunctionNameEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/GanthipuramJunction"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Name"
            android:textSize="6pt" />

        <!-- Ganthipuram Bus Edit Coordinates Button -->
        <Button
            android:id="@+id/GanthipuramJunctionCoordinateEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/GanthipuramJunction"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Coordinates"
            android:textSize="6pt" />

    </RelativeLayout>

    <!-- Avinashi Road Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <!-- Ganthipuram Bus TextView -->
        <TextView
            android:id="@+id/AvinashiRd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avinashi Rd"
            android:textSize="10pt"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <!-- Ganthipuram Bus Distance TextView -->
        <TextView
            android:id="@+id/AvinashiDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 km"
            android:textSize="10pt"
            android:layout_alignBaseline="@id/AvinashiRd"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <!-- Ganthipuram Bus Edit Name Button -->
        <Button
            android:id="@+id/AvinashiNameEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/AvinashiRd"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Name"
            android:textSize="6pt" />

        <!-- Ganthipuram Bus Edit Coordinates Button -->
        <Button
            android:id="@+id/AvinashiCoordinateEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/AvinashiRd"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Coordinates"
            android:textSize="6pt" />

    </RelativeLayout>

    <!-- Calculate Distances Button -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Distances"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:textSize="10pt"
        android:padding="5pt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
    <!-- Reset Name Button -->
    <Button
        android:id="@+id/NameReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Name"
        android:textSize="8pt"
        android:padding="5pt"
        android:layout_gravity="left"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"/>

    <!-- Reset Coordinates Button -->
    <Button
        android:id="@+id/CoordinateReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Coordinates"
        android:textSize="8pt"
        android:padding="5pt"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>
