            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Name"
            android:textSize="6pt" />

        <!-- Location 3 Edit Coordinates Button -->
        <Button
            android:id="@+id/LocThreeCoordinateEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/LocThree"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Coordinates"
            android:textSize="6pt" />

    </RelativeLayout>

    <!-- Location 4 Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <!-- Location 4 TextView -->
        <TextView
            android:id="@+id/LocFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location 4"
            android:textSize="10pt"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <!-- Location 4 Distance TextView -->
        <TextView
            android:id="@+id/LocFourDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 km"
            android:textSize="10pt"
            android:layout_alignBaseline="@id/LocFour"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <!-- Location 4 Edit Name Button -->
        <Button
            android:id="@+id/LocFourNameEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/LocFour"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Name"
            android:textSize="6pt" />

        <!-- Location 4 Edit Coordinates Button -->
        <Button
