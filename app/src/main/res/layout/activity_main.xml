            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Name"
            android:textSize="6pt" />

        <!-- Location 5 Edit Coordinates Button -->
        <Button
            android:id="@+id/LocFiveCoordinateEditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/LocFive"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="3pt"
            android:text="Edit Coordinates"
            android:textSize="6pt" />

    </RelativeLayout>

    <!-- Calculate Distances Button -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Distances"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:textSize="10pt"
        android:padding="5pt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
    <!-- Reset Name Button -->
    <Button
        android:id="@+id/NameReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Name"
        android:textSize="8pt"
        android:padding="5pt"
        android:layout_gravity="left"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"/>

    <!-- Reset Coordinates Button -->
    <Button
        android:id="@+id/CoordinateReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Coordinates"
        android:textSize="8pt"
        android:padding="5pt"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>
